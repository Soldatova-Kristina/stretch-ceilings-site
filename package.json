{
  "name": "stretch-ceilings-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "rm -rf .next .swc node_modules/.cache && next dev",
    
    "build": "next build",
    "build:gh": "cp .env.gh-pages .env.production && next build",
    "build:timeweb": "cp .env.timeweb .env.production && next build",
    "build:timeweb-subfolder": "cp .env.timeweb-subfolder .env.production && next build",
    
    "deploy:gh": "npm run build:gh && touch out/.nojekyll && gh-pages -d out",
    
    "postbuild": "node scripts/fix-css-paths.mjs",
    
    "start": "next start",
    "lint": "eslint",
    
    "img:convert": "node scripts/convert-images.mjs",
    "img:validate": "node scripts/validate-webp.mjs"
  },
  "dependencies": {
    "next": "15.5.5",
    "ogl": "^1.0.11",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "eslint": "^9",
    "eslint-config-next": "15.5.5",
    "gh-pages": "^6.3.0",
    "sharp": "^0.33.0"
  }
}